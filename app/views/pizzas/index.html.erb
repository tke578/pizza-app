<p style="color: green"><%= notice %></p>
<h1>Pizzas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Toppings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @pizzas.present? %>
      <% @pizzas.each do |pizza| %>
        <tr>
          <td><%= pizza.name %></td>
          <td><%= pizza.toppings.map(&:name).join(", ") %></td>
          <td><%= link_to 'Show', pizza, class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_pizza_path(pizza), class: 'btn btn-warning' %></td>
          <td><%= button_to 'Destroy', pizza, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    <% else %>
      <h3>No Pizzas found, please create one!</h3>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Pizza', new_pizza_path, class: 'btn btn-success' %>
